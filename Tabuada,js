let tabuada = 15;
let limite = 6;

if (limite <= 0 || tabuada <= 0) {
    console.log("Escolha um nÃºmero positivo, por favor!");
} else if (limite % 1 !== 0 || tabuada % 1 !== 0) {
    console.log("Escolha um nÃºmero inteiro, por favor!")
} else {
    for (let i = 1; i <= limite; i ++) {
        console.log(tabuada, "x",i, "=", tabuada * i);
    }
}